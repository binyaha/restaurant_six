<!-- function4-step10 包含了幾個功能 參考理下的註釋  -->
<div class="container">
  <h1>餐廳分類總表</h1>
  <div>
<!-- 可在後台的餐廳index 跟 分類index切換的按鈕 -->
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
<!-- -->
  </div>

<!-- 新增分類的form 跟update按鈕 -->
  <div class="form-inline">
    <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "restaurant category", class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
      <% end %>
    <% end %>
  </div>
<!-- -->

<!-- 顯示分類的表單 有name 和edit delete按鈕 -->
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-boerded">
        <thead>
          <tr>
            <th>id</th>
            <th>餐廳分類</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
        
            <% @categories.each do |category| %>
              <tr>
                <td scope="row"><%= category.id %></td>
                <td><%= category.name %></td>
 <!-- function4-step14 按下edit連結時 把id傳到index方法內 -->
                <td><%= link_to "Edit", admin_categories_path(id: category.id) %>
 <!-- 回controller  -->
                    <%= link_to "Destroy", admin_category_path(category), method: :delete, data: {confirm: "Are you sure"} %>
                </td>
              </tr>
            <% end %>
          
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- 接著做create功能 回到controller -->


