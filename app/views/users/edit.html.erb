<div class="container">

<%= form_for @user do |f| %>
<div class="form-group">

  <%= f.text_field :name, class: " form-control" %>
</div>
<div class="form-group">

  <%= f.text_area :intro, class: " form-control"  %>
</div>
<div class="form-group">
  <%= image_tag @user.avatar, width: '10%' if @user.avatar != nil  %>
  <%= f.file_field :avatar %>
</div>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel",  user_path(@user), class: "btn btn-default" %>
  <% end %>
  
</div>